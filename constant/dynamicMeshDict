FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh       dynamicMotionSolverFvMesh;

motionSolverLibs   (rigidBodyMeshMotion);

motionSolver       rigidBodyMotion;

rigidBodyMotionCoeffs
{
    report          on;

    solver
    {
        type Newmark;
    }

    accelerationRelaxation 0.3;

    bodies
    {
        floatingObject
        {
            type            cuboid;
            parent          root;

            // Cuboid dimensions
            Lx              0.2;
            Ly              0.2;
            Lz              0.1;

            // Density of the cuboid
            rho             900;

            // Cuboid mass
            mass            #eval{ $rho*$Lx*$Ly*$Lz };
            L               ($Lx $Ly $Lz);
            centreOfMass    (0 0 -0.05);
            transform       (1 0 0 0 1 0 0 0 1) (0.5 0.45 0);

			joint
			{
				type composite;
				joints
				(
					{ type Px; }   // surge  (x)
					{ type Py; }   // heave (y)
				);
			}
			constraints
			{
				stayInPlane
				{
					sixDoFRigidBodyMotionConstraint plane;
					normal (0 0 1);          // plane normal â†’ z
				}
			}

            patches         (floatingObject);
            innerDistance   0.01;
            outerDistance   0.2;
        }
    }

}


// ************************************************************************* //
